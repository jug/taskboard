            <% end -%>
            &nbsp;&nbsp;
            <% link_to({ :controller => 'taskboard', :action => 'clone_taskboard', :id => taskboard, :with_hours => 0 }, :title => "Create a copy of '#{h(taskboard.name)}'", :rel => 'clone', :class => 'cloneTaskboard') do -%>
            <img src="/images/taskboard_clone.png" alt="Create a copy of '<%= h(taskboard.name) %>'" />
            <% end -%>
        </li>
    </ul>
    <% end -%>
